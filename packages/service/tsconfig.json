{
  "compilerOptions": {
    /* Environment */
    "target": "es2016",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "types": ["react"],

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Linting */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  },
}